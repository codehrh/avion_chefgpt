<div class="min-h-screen bg-[#FDEDD6] flex items-center justify-center">
  <div class="bg-white/90 dark:bg-gray-800/90 shadow-lg rounded-lg p-6 max-w-sm w-full">
    <h2 class="text-2xl font-bold text-[#AE150D] text-center mb-6">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "space-y-4") do |f| %>
      <!-- Email Field -->
      <div>
        <%= f.label :email, "Email", class: "block text-sm font-medium text-[#3D5926] mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border border-[#FDD365] rounded-lg shadow-sm focus:ring-[#FC8F00] focus:border-[#FC8F00] bg-[#FDEDD6] text-[#3D5926]" %>
      </div>

      <!-- Password Field -->
      <div>
        <%= f.label :password, "Password", class: "block text-sm font-medium text-[#3D5926] mb-1" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 border border-[#FDD365] rounded-lg shadow-sm focus:ring-[#FC8F00] focus:border-[#FC8F00] bg-[#FDEDD6] text-[#3D5926]" %>
      </div>

      <!-- Remember Me Checkbox -->
      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "w-4 h-4 text-[#FC8F00] border-gray-300 rounded focus:ring-[#FC8F00] bg-[#FDEDD6]" %>
          <%= f.label :remember_me, class: "ml-2 text-sm font-medium text-[#3D5926]" %>
        </div>
      <% end %>

      <!-- Forgot Password Link -->
      <div class="flex justify-between items-center">
        <a href="<%= new_password_path(resource_name) %>" class="text-sm font-medium text-[#FC8F00] hover:underline">Forgot password?</a>
      </div>

      <!-- Submit Button -->
      <div class="mt-4">
        <%= f.submit "Log in", class: "w-full bg-[#AE150D] text-white font-medium py-2 rounded-lg hover:bg-[#FC8F00] focus:ring-4 focus:ring-[#FDD365] focus:outline-none transition duration-300" %>
      </div>
    <% end %>

    <!-- Sign Up Link -->
    <div class="text-sm text-center mt-4 text-[#3D5926]">
      Donâ€™t have an account yet? <%= link_to "Sign up", new_registration_path(resource_name), class: "font-medium text-[#AE150D] hover:underline" %>
    </div>
  </div>
</div>
