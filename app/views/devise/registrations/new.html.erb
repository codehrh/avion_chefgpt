<div class="min-h-screen bg-[#FDEDD6] flex items-center justify-center">
  <div class="bg-white/90 shadow-lg rounded-lg p-6 max-w-sm w-full">
    <h2 class="text-2xl font-bold text-[#AE150D] text-center mb-6">Sign Up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "space-y-4") do |f| %>
      <!-- Error Messages -->
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Email Field -->
      <div>
        <%= f.label :email, "Email", class: "block text-sm font-medium text-[#3D5926] mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border border-[#FDD365] rounded-lg shadow-sm focus:ring-[#FC8F00] focus:border-[#FC8F00] bg-[#FDEDD6] text-[#3D5926]" %>
      </div>

      <!-- Password Field -->
      <div>
        <%= f.label :password, "Password", class: "block text-sm font-medium text-[#3D5926] mb-1" %>
        <% if @minimum_password_length %>
          <p class="text-sm text-gray-500 mb-1">(Minimum <%= @minimum_password_length %> characters)</p>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 border border-[#FDD365] rounded-lg shadow-sm focus:ring-[#FC8F00] focus:border-[#FC8F00] bg-[#FDEDD6] text-[#3D5926]" %>
      </div>

      <!-- Password Confirmation Field -->
      <div>
        <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-[#3D5926] mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 border border-[#FDD365] rounded-lg shadow-sm focus:ring-[#FC8F00] focus:border-[#FC8F00] bg-[#FDEDD6] text-[#3D5926]" %>
      </div>

      <!-- Submit Button -->
      <div class="mt-4">
        <%= f.submit "Sign up", class: "w-full bg-[#AE150D] text-white font-medium py-2 rounded-lg hover:bg-[#FC8F00] focus:ring-4 focus:ring-[#FDD365] focus:outline-none transition duration-300" %>
      </div>
    <% end %>

    <!-- Sign In Link -->
    <div class="text-sm text-center mt-4 text-[#3D5926]">
      Already have an account? <%= link_to "Log in", new_session_path(resource_name), class: "font-medium text-[#AE150D] hover:underline" %>
    </div>
  </div>
</div>
