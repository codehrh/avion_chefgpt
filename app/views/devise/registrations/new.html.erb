<div class="min-h-screen flex items-center justify-center px-6 py-12" style="background-image: url(<%= asset_path 'background-image.png' %>); background-size: cover; background-position: center;">
  <div class="bg-white/90 shadow-lg rounded-lg p-8 max-w-md w-full">
    <h2 class="text-3xl font-bold text-[#AE150D] text-center mb-8">Sign Up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "space-y-6") do |f| %>
      <!-- Error Messages -->
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Grouped Input Fields -->
      <div class="space-y-6">
        <!-- Email Field -->
        <div class="space-y-2">
          <%= f.label :email, "Email", class: "block text-sm font-medium text-[#3D5926]" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border border-[#FDD365] rounded-lg shadow-sm focus:ring-[#FC8F00] focus:border-[#FC8F00] bg-[#FDEDD6] text-[#3D5926]" %>
        </div>

        <!-- Password Field -->
        <div class="space-y-2">
          <%= f.label :password, "Password", class: "block text-sm font-medium text-[#3D5926]" %>
          <% if @minimum_password_length %>
            <span class="text-sm text-gray-500">(Minimum <%= @minimum_password_length %> characters)</span>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 border border-[#FDD365] rounded-lg shadow-sm focus:ring-[#FC8F00] focus:border-[#FC8F00] bg-[#FDEDD6] text-[#3D5926]" %>
        </div>

        <!-- Password Confirmation Field -->
        <div class="space-y-2">
          <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-[#3D5926]" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 border border-[#FDD365] rounded-lg shadow-sm focus:ring-[#FC8F00] focus:border-[#FC8F00] bg-[#FDEDD6] text-[#3D5926]" %>
        </div>
      </div>

      <!-- Submit Button -->
      <div class="mt-12">
        <%= f.submit "Sign up", class: "w-full bg-[#AE150D] text-white font-medium py-3 rounded-lg hover:bg-[#FC8F00] focus:ring-4 focus:ring-[#FDD365] focus:outline-none transition duration-300" %>
      </div>
    <% end %>

    <!-- Sign In Link -->
    <div class="text-sm text-center mt-6 text-[#3D5926]">
      Already have an account? <%= link_to "Log in", new_session_path(resource_name), class: "font-medium text-[#AE150D] hover:underline" %>
    </div>
  </div>
</div>
