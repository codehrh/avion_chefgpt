<div class="min-h-screen flex items-center justify-center px-6 py-12" style="background-image: url(<%= asset_path 'background-image.png' %>); background-size: cover; background-position: center;">
  <div class="bg-white/90 shadow-lg rounded-lg p-8 max-w-md w-full">
    <h2 class="text-3xl font-bold text-[#AE150D] text-center mb-8">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: "space-y-6") do |f| %>
      <!-- Error Messages -->
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Email Field -->
      <div class="space-y-2">
        <%= f.label :email, "Email", class: "block text-sm font-medium text-[#3D5926]" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-3 border border-[#FDD365] rounded-lg shadow-sm focus:ring-[#FC8F00] focus:border-[#FC8F00] bg-[#FDEDD6] text-[#3D5926]" %>
      </div>

      <!-- Submit Button -->
      <div class="mt-6">
        <%= f.submit "Send me reset password instructions", class: "w-full bg-[#AE150D] text-white font-medium py-3 rounded-lg hover:bg-[#FC8F00] focus:ring-4 focus:ring-[#FDD365] focus:outline-none transition duration-300" %>
      </div>
    <% end %>

    <!-- Back to Login Link -->
    <div class="text-sm text-center mt-6 text-[#3D5926]">
      Remembered your password? <%= link_to "Log in", new_session_path(resource_name), class: "font-medium text-[#AE150D] hover:underline" %>
    </div>
  </div>
</div>
