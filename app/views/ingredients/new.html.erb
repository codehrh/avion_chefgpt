<div class="container mx-auto px-4 py-8 ">
  <!-- Header Section -->
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-[#AE150D]">New Ingredient</h1>
  </div>

  <!-- Ingredient Form -->
  <div class="bg-white rounded-lg shadow-md p-6 border border-[#FDD365]/20">
