<div class="fixed top-0 left-0 h-screen w-64 bg-white shadow-lg flex flex-col">
  <!-- App Logo -->
  <div class="p-6">
    <h1 class="text-2xl font-bold text-[#AE150D]">ChefGPT</h1>
  </div>

  <!-- Main Navigation -->

  <nav class="flex-1 px-3 space-y-2 mb-auto">
    <!-- Home -->
    <%= link_to root_path, class: "flex items-center px-3 py-2 rounded-lg text-gray-700 hover:bg-[#FDEDD6] #{current_page?(root_path) ? 'bg-[#FDEDD6] text-[#AE150D]' : ''}" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
      </svg>
      <span class="text-sm font-medium">Home</span>
    <% end %>


    <!-- My Recipes -->
    <%= link_to recipes_path, class: "flex items-center px-3 py-2 rounded-lg text-gray-700 hover:bg-[#FDEDD6] #{current_page?(recipes_path) ? 'bg-[#FDEDD6] text-[#AE150D]' : ''}" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
      </svg>
      <span class="text-sm">My Recipes</span>
    <% end %>

    <!-- Favorites -->
    <%= link_to favorites_recipes_path, class: "flex items-center px-3 py-2 rounded-lg text-gray-700 hover:bg-[#FDEDD6] #{current_page?(favorites_recipes_path) ? 'bg-[#FDEDD6] text-[#AE150D]' : ''}" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z"/>
      </svg>
      <span class="text-sm">Favorites</span>
    <% end %>

    <!-- My Ingredients -->
    <%= link_to ingredients_path, class: "flex items-center px-3 py-2 rounded-lg text-gray-700 hover:bg-[#FDEDD6] #{current_page?(ingredients_path) ? 'bg-[#FDEDD6] text-[#AE150D]' : ''}" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
      </svg>
      <span class="text-sm">My Ingredients</span>
    <% end %>

    <!-- Generate Recipe -->
    <%= link_to new_recipe_path, class: "flex items-center px-3 py-2 rounded-lg text-gray-700 hover:bg-[#FDEDD6] #{current_page?(new_recipe_path) ? 'bg-[#FDEDD6] text-[#AE150D]' : ''}" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      <span class="text-sm font-medium">Generate Recipe</span>
    <% end %>
  </nav>

  <!-- User Profile -->
  <div class="p-4 border-t">
    <div class="flex items-center space-x-3">
      <p class="text-sm font-medium text-gray-700 truncate"><%= current_user.email %></p>

      <%= button_to destroy_user_session_path, method: :delete, class: "text-sm text-[#AE150D] hover:text-[#FC8F00] flex items-center" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />

        </svg>
        <span>Logout</span>
      <% end %>
    </div>
  </div>
</div>
