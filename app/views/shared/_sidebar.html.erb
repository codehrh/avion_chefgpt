<div class="relative bg-white shadow-lg fixed top-0 left-0 w-full z-50">
  <!-- Image Section -->
  <div class="w-full h-32 bg-cover bg-center" style="background-image: url(<%= asset_path 'header.png' %>); background-size: cover; background-position: center;">
    <!-- Optional Overlay -->
    <div class="w-full h-full bg-black/30"></div>
  </div>

  <!-- Navigation Bar -->
  <div class="container mx-auto px-4 py-4 flex items-center justify-between">
    <!-- App Logo -->
    <div class="flex items-center space-x-4">
      <h1 class="text-2xl font-bold text-[#AE150D]">ChefGPT</h1>
    </div>

    <!-- Navigation Links -->
    <nav class="flex items-center space-x-6">
      <!-- Home -->
      <%= link_to root_path, class: "text-gray-700 hover:text-[#AE150D] font-medium #{current_page?(root_path) ? 'text-[#AE150D]' : ''}" do %>
        <span>Home</span>
      <% end %>

      <!-- My Recipes -->
      <%= link_to recipes_path, class: "text-gray-700 hover:text-[#AE150D] font-medium #{current_page?(recipes_path) ? 'text-[#AE150D]' : ''}" do %>
        <span>My Recipes</span>
      <% end %>

      <!-- Favorites -->
      <%= link_to favorites_recipes_path, class: "text-gray-700 hover:text-[#AE150D] font-medium #{current_page?(favorites_recipes_path) ? 'text-[#AE150D]' : ''}" do %>
        <span>Favorites</span>
      <% end %>

      <!-- My Ingredients -->
      <%= link_to ingredients_path, class: "text-gray-700 hover:text-[#AE150D] font-medium #{current_page?(ingredients_path) ? 'text-[#AE150D]' : ''}" do %>
        <span>My Ingredients</span>
      <% end %>

      <!-- Generate Recipe -->
      <%= link_to new_recipe_path, class: "text-gray-700 hover:text-[#AE150D] font-medium #{current_page?(new_recipe_path) ? 'text-[#AE150D]' : ''}" do %>
        <span>Generate Recipe</span>
      <% end %>
    </nav>

    <!-- User Profile & Logout -->
    <div class="flex items-center space-x-4">
      <p class="text-sm font-medium text-gray-700 truncate"><%= current_user.email %></p>
      <%= button_to destroy_user_session_path, method: :delete, class: "text-sm text-[#AE150D] hover:text-[#FC8F00] flex items-center" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
        </svg>
        <span>Logout</span>
      <% end %>
    </div>
  </div>
</div>
