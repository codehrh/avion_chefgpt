<!-- app/views/layouts/_sidebar.html.erb -->
<div class="fixed top-0 left-0 max-h-screen w-64 bg-white shadow-lg flex-col">
  <!-- App Logo -->
  <div class="p-6">
    <h1 class="text-2xl font-bold text-[#AE150D]">ChefGPT</h1>
  </div>

  <!-- Main Navigation -->
  <nav class="flex-1 px-3 space-y-3 mb-auto">
    <%= link_to root_path, class: "flex items-center px-3 py-2 rounded-lg text-gray-700 hover:bg-[#FDEDD6] #{current_page?(root_path) ? 'bg-[#FDEDD6] text-[#AE150D]' : ''}" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M3 12l2-2m0 0l7-7 7 7
             M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3
             m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1
             m-6 0h6"
        />
      </svg>
      <span class="text-sm">Home</span>
    <% end %>

    <!-- My Ingredients -->
    <%= link_to ingredients_path, class: "flex items-center px-3 py-2 rounded-lg text-gray-700 hover:bg-[#FDEDD6] #{current_page?(ingredients_path) ? 'bg-[#FDEDD6] text-[#AE150D]' : ''}" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2
             m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
        />
      </svg>
      <span class="text-sm">My Ingredients</span>
    <% end %>

    <!-- My Recipes -->
    <%= link_to recipes_path, class: "flex items-center px-3 py-2 rounded-lg text-gray-700 hover:bg-[#FDEDD6] #{current_page?(recipes_path) ? 'bg-[#FDEDD6] text-[#AE150D]' : ''}" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2
             M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"
        />
      </svg>
      <span class="text-sm">My Recipes</span>
    <% end %>

    <!-- Generate Recipe -->
    <%= link_to new_recipe_path, class: "flex items-center px-3 py-2 rounded-lg text-gray-700 hover:bg-[#FDEDD6] #{current_page?(new_recipe_path) ? 'bg-[#FDEDD6] text-[#AE150D]' : ''}" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M12 4v16m8-8H4"
        />
      </svg>
      <span class="text-sm">Generate Recipe</span>
    <% end %>
  </nav>

  <!-- User Profile -->
  <div class="mt-auto p-4">
    <div class="flex-col items-center justify-between">
      <p class="text-sm font-medium text-gray-700 truncate"><%= current_user.email %></p>
      <%= button_to destroy_user_session_path, 
          method: :delete,
          class: "text-sm text-[#AE150D] hover:text-[#FC8F00] flex items-center" do %>
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7
               a3 3 0 013-3h4a3 3 0 013 3v1"
          />
        </svg>
        <span>Logout</span>
      <% end %>
    </div>
  </div>
</div>
